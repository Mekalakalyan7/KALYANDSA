import java.util.*;
public class JavaBasics
{
   public static double median(int arr[],int n)
   {
        Arrays.sort(arr);
        if(n%2==0)
        {
          return ((arr[n/2-1] + arr[n/2])/2.0);
        }
        else{
         return arr[n/2];
        }
   }
   public static void main(String[] args) {
      int arr[] = {1,2,3,4,5,6,7};
      int n=arr.length;
      System.out.println(median(arr, n));
   }
}
